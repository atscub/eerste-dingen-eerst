  "title": "Les 19",
  "type": "dialogue",
  "dialogue": {
    "lines": [
      {
        "text": "Wat is er aan de hand, kinderen?",
        "speaker": "Speaker 1",
        "translation": "¿Qué pasa, niños?"
      },
      {
        "text": "We zijn moe...",
        "speaker": "Speaker 2",
        "translation": "Estamos cansados..."
      },
      {
        "text": "...en we hebben dorst, mama.",
        "speaker": "Speaker 1",
        "translation": "...y tenemos sed, mamá."
      },
      {
        "text": "Ga hier zitten.",
        "speaker": "Speaker 2",
        "translation": "Siéntense aquí."
      },
      {
        "text": "Gaat het nu goed?",
        "speaker": "Speaker 1",
        "translation": "¿Están bien ahora?"
      },
      {
        "text": "Nee, niet echt.",
        "speaker": "Speaker 2",
        "translation": "No, no lo estamos."
      },
      {
        "text": "Kijk! Daar is een ijscoman.",
        "speaker": "Speaker 1",
        "translation": "¡Miren! Hay un heladero."
      },
      {
        "text": "Twee ijsjes, alstublieft.",
        "speaker": "Speaker 2",
        "translation": "Dos helados, por favor."
      },
      {
        "text": "Alsjeblieft, kinderen.",
        "speaker": "Speaker 1",
        "translation": "Aquí tienen, niños."
      },
      {
        "text": "Dank je, mama.",
        "speaker": "Speaker 2",
        "translation": "Gracias, mamá."
      },
      {
        "text": "Deze ijsjes zijn lekker.",
        "speaker": "Speaker 1",
        "translation": "Estos helados son agradables."
      },
      {
        "text": "Gaat het nu goed?",
        "speaker": "Speaker 2",
        "translation": "¿Están bien ahora?"
      },
      {
        "text": "Ja, het gaat goed, dank je!",
        "speaker": "Speaker 1",
        "translation": "Sí, lo estamos, ¡gracias!"
      }
    ],
