  "title": "Les 81",
  "sections": [
    {
      "type": "dialogue",
      "lines": [
        {
          "text": "Hallo, Peggy. Waar is Tom?",
          "speaker": "John",
          "translation": "Hola, Peggy. ¿Dónde está Tom?"
        },
        {
          "text": "Hij is boven. Hij neemt een bad.",
          "speaker": "Peggy",
          "translation": "Está arriba. Se está bañando."
        },
        {
          "text": "Tom!",
          "speaker": "Peggy",
          "translation": "¡Tom!"
        },
        {
          "text": "Ja?",
          "speaker": "Tom",
          "translation": "¿Sí?"
        },
        {
          "text": "John is hier.",
          "speaker": "Peggy",
          "translation": "John está aquí."
        },
        {
          "text": "Ik ben bijna klaar.",
          "speaker": "Tom",
          "translation": "Ya casi estoy listo."
        },
        {
          "text": "Hallo, John. Neem een sigaret.",
          "speaker": "Tom",
          "translation": "Hola, John. Ten un cigarrillo."
        },
        {
          "text": "Nee dank je, Tom.",
          "speaker": "John",
          "translation": "No gracias, Tom."
        },
        {
          "text": "Neem dan een glas whisky.",
          "speaker": "Tom",
          "translation": "Ten un vaso de whisky entonces."
        },
        {
          "text": "Oké. Dank je.",
          "speaker": "John",
          "translation": "Está bien. Gracias."
        },
        {
          "text": "Is het eten klaar, Peggy?",
          "speaker": "Tom",
          "translation": "¿Está lista la cena, Peggy?"
        },
        {
          "text": "Het is bijna klaar. We kunnen om zeven uur eten.",
          "speaker": "Peggy",
          "translation": "Ya casi está. Podemos cenar a las siete en punto."
        },
        {
          "text": "John en ik hebben vandaag samen geluncht. We gingen naar een restaurant.",
          "speaker": "Tom",
          "translation": "John y yo almorzamos juntos hoy. Fuimos a un restaurante."
        },
        {
          "text": "Wat aten jullie?",
          "speaker": "Peggy",
          "translation": "¿Qué comieron?"
        },
        {
          "text": "We aten gebraden rundvlees en aardappelen.",
          "speaker": "Tom",
          "translation": "Comimos carne asada de res y papas."
        },
        {
          "text": "Oh!",
          "speaker": "Peggy",
          "translation": "¡Oh!"
        },
        {
          "text": "Wat is er, Peggy?",
          "speaker": "Tom",
          "translation": "¿Qué pasa, Peggy?"
        },
        {
          "text": "Nou, jullie gaan vanavond weer gebraden rundvlees en aardappelen eten!",
          "speaker": "Peggy",
          "translation": "Bueno, ¡van a comer carne asada de res y papas de nuevo esta noche!"
        }
      ],
